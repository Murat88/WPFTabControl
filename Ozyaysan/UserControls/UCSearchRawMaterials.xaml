            </my:DataGrid.Columns>          
            <my:DataGrid.RowStyle>
                <Style TargetType="my:DataGridRow">
                    <Setter Property="Foreground" Value="Black" />    
                </Style>
            </my:DataGrid.RowStyle>
        </my:DataGrid>
